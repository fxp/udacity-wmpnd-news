/**index.wxss**/
.top{
  text-align: center;
  height:230rpx;
  /* background: url(../../images/loading.gif) 0 0;  */
}

.topLoading{
  position: relative;
  top:60px;
  /* font-size: 30rpx; */
  /* color: rgba(0, 0, 0, 0.7); */
  height:120rpx;
  width:200rpx;
}


.navBar{
  background: linear-gradient(to bottom, rgb(27, 170, 233), rgb(24,147,210)); 
  width:100%;
  position: fixed;
  top: 0rpx;
  height: 210rpx;
  z-index: 10;
}

.head{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  margin-top:40rpx;
  font-size: 28rpx;
  color:rgba(244, 244, 244, 0.9);
}

.icon{
  height:60rpx;
  width:60rpx;
  margin-right:20rpx;
}

.tagPanel {
  padding:0 20rpx;
  height: 90rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  z-index: 10;
}

.tagTitle {
  width: 100rpx;
  height: 80rpx;
  /* float: left; */
  display: inline-block;
  line-height: 90rpx;
  font-size: 28rpx;
  cursor: pointer;
  box-sizing: border-box;
  color: rgba(244, 244, 244, 0.7);
  text-align: center;
  background-color: transparent;
}

.tagActive {
  /* border-bottom: 4rpx solid rgba(244, 244, 244, 0.7); */
  color: rgba(244, 244, 244, 0.9);
}

.tagActive:after {
  content:' ';
  position: absolute;
  display:block;
  width: 15px;
  margin: -15rpx 35rpx;
  border:2rpx solid rgba(244, 244, 244, 0.7);
}

.content-list {
  background-color: #fff;
  position: relative;
}

.list-item {
  height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

.list-item-content {
  padding: 20rpx;
  border-bottom: 1px solid #e5e5e5;
  overflow: hidden;
  box-sizing: border-box;
}

.list-item-right {
  height: 140rpx;
  width: 186rpx;
  margin-right: 20rpx;
  float: right;
}

.list-item-right image {
  width: 100%;
  height: 100%;
}

.list-item-left {  
  float: left;
  width: 434rpx;
  height: 140rpx;
  position: relative;
}

.news-title {
  font-size: 30rpx;
  color: #404040;
  text-align: justify;
  height: 86rpx;
  overflow-y: hidden;
}

.article-source {
  margin-right:20rpx;
}

.news-meta {
  margin-top: 10rpx;
  display: flex;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.3);
}